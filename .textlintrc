{
  "rules": {
    "max-ten": {
      "max": 5
    },
    "no-doubled-conjunctive-particle-ga": true,
    "no-doubled-conjunction": true,
    "spellcheck-tech-word": false,
    "no-mix-dearu-desumasu": true,
    "no-doubled-joshi": {
      "min_interval" : 1,
      "strict": false
    },
    "no-start-duplicated-conjunction": true,
    "prh": {
      "rulePaths": ["prh.yml"]
    },
    "preset-jtf-style": {
      "4.2.6.ハイフン(-)": false,
      "4.1.3.ピリオド(.)、カンマ(,)": false,
      "1.2.1.句点(。)と読点(、)": false,
      "4.2.7.コロン(：)": false
    },
    "sentence-length": {
      "max": 200
    }
  }
}
